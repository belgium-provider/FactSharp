<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <!-- metadata of package -->
    <PackageId>FactSharp</PackageId>
    <Version>1.1.0</Version>
    <Authors>Yekuuun</Authors>
    <Company>Yekuuun</Company>
    <Description>A basic SDK for the WeFact API.</Description>
    <RepositoryUrl>https://github.com/belgium-provider/FactSharp</RepositoryUrl>
    <PackageProjectUrl>https://github.com/belgium-provider/FactSharp</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageOutputPath>./artifacts</PackageOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.9" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../README.md" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
